<h1 align="center"> Welcome to MessageMe - a complete Chat App </h1>
<h2 class="ui center aligned icon header">
  <i class="circular orange power off icon"></i>
Log in to continue
</h2>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">    
      <%= form_with(scope: :session, html: { class: "ui form", role: "form" }, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autofocus: true %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: 'ui orange submit button' %>
      <%end%>
      
    </div>
    <div class="middle aligned column">
      <div class="ui big orange disabled button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>